{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "types": ["node", "bun-types"],
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
  },
  "include": ["src/**/*", "tests/**/*", "scripts/**/*", "soul/**/*"],
  "exclude": ["node_modules"]
}
